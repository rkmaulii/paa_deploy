datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int         @id @default(autoincrement())
    name        String 
    email       String      @unique 
    password    String
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
}

model Item {
    id          Int         @id @default(autoincrement())
    category    String       
    name        String      @unique
    price       String
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
}